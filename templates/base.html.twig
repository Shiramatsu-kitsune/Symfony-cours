{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Mon Site{% endblock %}</title>
    <link rel="stylesheet" href="{{ asset('css/TwigStyles.css') }}">
</head>
<body>
    <nav class="navbar">
        <div class="logo">Mon Site</div>
        <div class="menu-toggle" id="mobile-menu">
            <span class="bar"></span>
            <span class="bar"></span>
            <span class="bar"></span>
        </div>
        <ul class="nav-links">
            <li><a href="{{ path('app_home') }}">Accueil</a></li>
            <li><a href="#">Actualité</a></li>
            <li class="dropdown">
                <a href="#" class="dropbtn">Catégorie</a>
                <ul class="dropdown-content">
                    <li><a href="#">Annonce Créateur contenus</a></li>
                    <li><a href="#">Annonce Entreprise</a></li>
                    <li><a href="#">Annonce Artiste</a></li>
                </ul>
            </li>
            <li><a href="#" class="login">Connexion</a></li>
        </ul>
    </nav>

    <main>
        {% block body %}{% endblock %}
    </main>

    <script>
        document.getElementById("mobile-menu").addEventListener("click", () => {
            document.querySelector(".nav-links").classList.toggle("active");
        });
    </script>
</body>
</html>
